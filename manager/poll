#!/usr/bin/env bash
TIMEOUT=5
DIR="/home/html-dev/under/acm/contest/submissions/"
STOP_FILE="STOP"
cd ${DIR}
rm ${STOP_FILE} -f
if [[ $1 == "stop" ]]; then
    touch $STOP_FILE
    exit
fi
echo "Starting the poll"
while (sleep $TIMEOUT); do
        if (test -f ${STOP_FILE}); then
            echo "Stopping the poll program from request."
            break;
        fi
	empty_queue
done
